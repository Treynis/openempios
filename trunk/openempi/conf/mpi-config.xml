        </scheduled-task>
    </scheduled-tasks>-->
    <custom-fields entity-name="person">
        <custom-field>
            <field-name>custom1</field-name>
            <source-field-name>familyName</source-field-name>
            <transformation-function>
                <function-name>Nysiis</function-name>
            </transformation-function>
        </custom-field>
        <custom-field>
            <field-name>custom2</field-name>
            <source-field-name>givenName</source-field-name>
            <transformation-function>
                <function-name>Nysiis</function-name>
            </transformation-function>
        </custom-field>
        <custom-field>
            <field-name>custom3</field-name>
            <source-field-name>dateOfBirth</source-field-name>
            <transformation-function>
                <function-name>DateTransformationFunction</function-name>
                <parameters>
                    <parameter>
                        <name>dateFormat</name>
                        <value>yyyy</value>
                    </parameter>
                </parameters>
            </transformation-function>
        </custom-field>
    </custom-fields>
    <bb:basic-blocking entity-name="person">
        <bb:blocking-rounds>
            <bb:blocking-round>
                <bb:blocking-fields>
                    <bb:blocking-field>
                        <bb:field-name>familyName</bb:field-name>
                    </bb:blocking-field>
                    <bb:blocking-field>
                        <bb:field-name>dateOfBirth</bb:field-name>
                    </bb:blocking-field>
                </bb:blocking-fields>
            </bb:blocking-round>
        </bb:blocking-rounds>
    </bb:basic-blocking>
    <em:exact-matching entity-name="person">
        <em:match-fields>
            <em:match-field>
                <em:field-name>givenName</em:field-name>
                <em:comparator-function>
                    <function-name>JaroWinkler</function-name>
                </em:comparator-function>
                <em:match-threshold>0.89</em:match-threshold>
            </em:match-field>
            <em:match-field>
                <em:field-name>familyName</em:field-name>
                <em:comparator-function>
                    <function-name>Levenshtein</function-name>
                </em:comparator-function>
                <em:match-threshold>0.8</em:match-threshold>
            </em:match-field>
            <em:match-field>
                <em:field-name>city</em:field-name>
                <em:comparator-function>
                    <function-name>JaroWinkler</function-name>
                </em:comparator-function>
                <em:match-threshold>0.87</em:match-threshold>
            </em:match-field>
        </em:match-fields>
    </em:exact-matching>
    <admin-configuration>
        <file-repository-directory>fileRepository</file-repository-directory>
        <data-directory>/mnt/sysnet</data-directory>
